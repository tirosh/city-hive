<% content_for :form_layout do %>
  <h3 class="mb-5">Sign up</h3>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="columns mb-0">
      <div class="field column">
        <%= f.label :name, class: "label" %>
        <%= f.text_field :first_name, placeholder: 'John', class: "input" %>
      </div>

      <div class="field column">
        <%= f.label :last_name, class: "label" %>
        <%= f.text_field :last_name, class: "input", placeholder: 'Smith' %>
      </div>
    </div>

    <div class="field">
      <%= f.label :email, class: "label" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input" %>
    </div>

    <div class="field mb-6">
      <%= f.label :city, class: "label" %>
      <%= f.text_field :city, placeholder: 'City', class: "input" %>
    </div>

    <% unless Hobby.count.zero? %>
      <div class="field mb-6">
        <%= f.label :hobbies, class: "label" %>
        <ul>
          <%= f.collection_check_boxes :hobby_ids, Hobby.order(:name), :id, :name do |b| %>
            <li>
              <%= b.label(class: "checkbox") { b.check_box(class: "checkbox") } %>
              <%= b.label(class: "checkbox") %>
            </li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="field">
      <%= f.label :password, class: "label" %>
      <%= f.password_field :password, autocomplete: "new-password", class: "input" %>
        <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %>
    </div>

    <div class="field">
      <%= f.label :password_confirmation, class: "label" %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "input" %>
    </div>

    <div class="field mt-5">
      <%= f.submit "Sign up", class: "button is-primary is-fullwidth" %>
    </div>
  <% end %>
  <hr class="my-5">
  <%= render "devise/shared/links" %>
<% end %>
<%= render "devise/shared/form-layout" %>
